#!/bin/sh
# need superuser : called by my-installer

app_name="secureMyLinux"
secureMyLinux_dir="$__distro_path_git/${app_name}"

say "clone https://github.com/dari862/${app_name}.git"
super_clone_repo "https://github.com/dari862/${app_name}.git" "${secureMyLinux_dir}"

say "Installing ${app_name}..." 1
my-superuser ln -sf "${secureMyLinux_dir}"/secureMyLinux.sh ${__distro_path_root}/system_files/bin/secureMyLinux
my-superuser ${__distro_path_root}/system_files/bin/secureMyLinux --full
