#!/bin/sh
if [ "$(id -u)" -eq 0 ];then
	_SUPERUSER=""
else
	_SUPERUSER="my-superuser"
fi

pulseconfig="/etc/pulse/default.pa"

if [ ! -f "${pulseconfig}" ] || grep -q "#load-module module-suspend-on-idle" "${pulseconfig}";then # enabled
	tweek_enabled=true 
elif [ "$1" = "--is-enable" ] || [ "$check_tweek" = "true" ];then # disabled and only check
	tweek_enabled=false
else
	say "disable_pulseaudio_suspend"
	${_SUPERUSER} sed -i "s/^load-module module-suspend-on-idle$/#load-module module-suspend-on-idle/g" ${pulseconfig}
fi
