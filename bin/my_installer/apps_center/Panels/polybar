#!/bin/sh
# X11 only package remove it from my-installer
# need superuser : called by my-installer
app_name="polybar"
#libnm-dev for networkmanager_dmenu
extra_apps_="libnm-dev"

say 'Installing package...' 1
Package_installer_ "${app_name} ${extra_apps_}" || continue
copy_from_extra_skel ".config/polybar" || continue

say 'Copy bin from polybar...' 1
# distro 
if [ -d "${__distro_path_root}/bin/X11/polybar" ];then
	my-superuser ln -sf "${__distro_path_root}/bin/X11/polybar/"* "${__distro_path_root}/system_files/bin" || continue
fi

"${__distro_path_root}"/bin/X11/not_add_2_path/polybar/polybar_fixes_based_on_ver || continue

polybar_launch_creater || continue
