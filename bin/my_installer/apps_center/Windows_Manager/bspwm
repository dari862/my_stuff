#!/bin/sh
# X11 only package remove it from my-installer
app_name="bspwm"
extra_apps_="sxhkd"

say "Installing ${app_name} ..." 1

Package_installer_ "${app_name} ${extra_apps_}" || continue

say "Add ${__custom_distro_name}_bspwm to /usr/share/xsessions..." 1
generate_applicationsdotdesktop_4_xsessions "bspwm" "bspwm"
say
copy_from_extra_skel ".config/bspwm" || continue
copy_from_extra_skel ".config/sxhkd" || continue
add_keybinds "$app_name"
