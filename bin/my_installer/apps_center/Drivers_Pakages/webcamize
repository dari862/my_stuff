#!/bin/sh
# need superuser : called by my-installer
set -e
app_name="gphoto2 v4l2loopback"
say 'Installing gphoto2 and v4l2loopback...' 1
Package_installer_ "${app_name}" || continue

super_clone_repo https://github.com/cowtoolz/webcamize.git "${__distro_path_git}"/webcamize
create_never_remove_bin "${__distro_path_git}"/webcamize/webcamize

