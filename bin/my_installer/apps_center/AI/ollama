#!/bin/sh
# need superuser : called by my-installer
app_name="ollama"
say "Installing ${app_name}..." 1
getURL '2term' "https://ollama.com/install.sh" | my-superuser sh || continue
service_manager "start" ollama || continue
generate_never_remove_bin "${_APPS_LIBDIR}/AI/Extra/manage_ollama.sh" || continue
