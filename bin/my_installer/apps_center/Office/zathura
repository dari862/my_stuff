#!/bin/sh

app_name="zathura"
set_as_default_package=true
prompt "  Do you want to set $app_name as default package?"  || set_as_default_package=false

say "Installing ${app_name}..." 1

Package_installer_ "${app_name}" || continue

copy_from_extra_skel ".config/zathura" || continue

[ "$set_as_default_package" = true ] && my-alternatives --set "my-pdf-reader" "${app_name}"
