#!/bin/sh
app_name="gammastep"
say 'Installing package...' 1

Package_installer_ "${app_name}" || continue

say 'Create config file...' 1
my-superuser ln -sf ${__distro_path_root}/bin/X11/yad/color_temperature_adjuster_gui/color_temperature_adjuster_gui ${__distro_path_root}/system_files/bin
my-superuser ${__distro_path_root}/bin/X11/yad/color_temperature_adjuster_gui/color_temperature_adjuster_gui --init "${app_name}"

say " type color_temperature_adjuster_gui"
say "to color temperature adjuster" 
