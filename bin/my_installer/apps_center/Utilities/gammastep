#!/bin/sh
app_name="gammastep"
say 'Installing package...' 1

Package_installer_ "${app_name}" || continue

say 'Create config file...' 1
my-superuser ln -sf /usr/share/my_stuff/bin/X11/yad/color_temperature_adjuster_gui/color_temperature_adjuster_gui /usr/share/my_stuff/system_files/bin
my-superuser /usr/share/my_stuff/bin/X11/yad/color_temperature_adjuster_gui/color_temperature_adjuster_gui --init "${app_name}"

say " type color_temperature_adjuster_gui"
say "to color temperature adjuster" 
