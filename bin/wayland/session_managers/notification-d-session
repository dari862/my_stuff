#!/bin/sh
. "$__distro_path_lib"

makorc_path="$HOME/.config/mako/config"

__edit() {
	pidof -q mako && my-text-editor "$makorc_path"
}

stop() {
	"${__distro_path_root}"/bin/WM/kill_process.sh mako
}

start() {
	pidof -q mako || setsid mako -c ${makorc_path} 2>/tmp/$USER/mako_error &
}

case "${1}" in
	""|restart)
		stop
		start		
	;;
	start)
		start		
	;;
	stop)	
		stop	
	;;
	edit)
		__edit
		stop
		start	
	;;
	*)	
		echo "Usage: mako-session [start|stop|restart]"
	;;
esac
