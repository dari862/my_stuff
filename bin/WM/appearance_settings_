#!/bin/sh
#===================================================================================
. "/usr/share/my_stuff/lib/common/Distro_path"
if command -v lxappearance >/dev/null ;then
	if [ "$HOME" = "/root" ];then
		lxappearance
	else
		lxappearance && ${__distro_path_root}/system_files/bin/reload_gtk23
	fi
fi	
