#!/bin/sh
set -e
. "$__distro_path_lib"
. "${__distro_path_root}/lib/common/WM"

opt="${1-h}"
opt2="${2-}"

cp2cb() {
  case "$XDG_SESSION_TYPE" in
    'x11') xclip -r -selection clipboard;;
    'wayland') wl-copy -n;; 
    *) err "Unknown display server";; 
  esac
}

get_ips() {
	if [ -z "$opt2" ];then
		echo "no interface were picked"
		echo "$(ip -br l | awk '$1 !~ "lo" { print $1}')"
		exit 1
	elif [ "$opt2" = "external_IP" ];then
		_ip="$(get_public_ip)"
	else
  		_ip="$(ip a l ${opt2} | awk '/inet/ {print $2}')"
  	fi
  	
	echo "${_ip}" | cp2cb 
	notify-send "IP (in clipboard)" " ${opt2}: ${_ip}"
}

help(){
echo "1 htop
2 notify-send  about storage
3 notify-send CPU hogs
4 notify-send Memory hogs
5 get_ips
6 edit script"
}

main(){
	case $opt in
		e) sysinfo_script_ --process & ;;
		m) free -m | sed -n 's/^Mem:\s\+[0-9]\+\s\+\([0-9]\+\)\s.\+/\1/p' ;;
		s) df -h "/" | awk ' /[0-9]/ {print $3 "/" $2}' ;;
		S) notify-send "ðŸ’½ Disk space" "$(df -h --output=target,used,size 2>/dev/null)" ;;
		ch) notify-send "ðŸ–¥ CPU hogs" "$(ps axch -o cmd:15,%cpu --sort=-%cpu | head)\\n(100% per core)" ;;
		mh) notify-send "ðŸ§  Memory hogs" "$(ps axch -o cmd:15,%mem --sort=-%mem | head)" ;;
		i) get_ips "${opt2}" ;;
		E) popup_terminal --super-user-editor "$(realpath "$0")";;	
		*) help ;;
	esac
}
main $opt
