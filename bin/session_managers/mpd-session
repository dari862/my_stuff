#!/bin/sh
mpdconf_path="$HOME/.config/mpd/mpd.conf"

stop() {
	mpd --kill || kill_process.sh mpd
	wait
}

createdb() {
	sleep 2
	cd ~/Music
	mpc -q add *
}

start() {
	pidof -q mpd || mpd ${mpdconf_path} &
}

case "${1}" in
	""|restart)
		stop
		start		
	;;
	start)
		start		
	;;
	stop)	
		stop	
	;;
	db)	
		createdb	
	;;
	*)	
		echo "Usage: mpd-session [start|stop|restart]"
	;;
esac
