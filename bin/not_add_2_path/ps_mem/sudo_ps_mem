#!/bin/bash
# need superuser : called by ps_mem
unalias -a
#===================================================================================
failed_(){
	massage="${1-}"
	"[ERROR] $0 : ${massage}"
	exit 1
}

if [ "$(id -u)" -ne 0 ];then
	failed_ "You are not a superuser. Exiting."
fi

tput civis
printf "Text to resalt: "
read t
while true; do 
	clear
	out=$(./ps_mem.python3 -S)
	outl=$(echo "$out" | wc -l)
	sl=$(tput lines)
	if [ "$sl" -lt "$outl" ];then
		echo "$out" | sed -e "3,$((outl-sl+4))d"
	else
		echo "$out"
	fi
	read -t 2
done | grep -E --color=auto -i "^|$t"
