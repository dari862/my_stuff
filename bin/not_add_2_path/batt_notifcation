#!/bin/sh
# Purpose: Display battery state, time|percent remaining until empty|full
# Author : Daniel Wayne Armstrong <hello@dwarmstrong.org>

set -e
if ! command -v upower >/dev/null 2>&1;then
	exit
fi

SCRIPT="batt_stat"
INFO=0
BAT="$(upower -e | grep BAT)"

Help() {
    echo "Display battery state, time|percent remaining until empty|full"
    echo ""
    echo "Syntax: $SCRIPT [-ha]"
    echo "options:"
    echo "h     Print this help"
    echo "a     Display all information"
}


run_options() {
    while getopts ":ha" OPT; do
        case $OPT in
            h)  Help
                exit;;
            a)  INFO=1
                ;;
            n)  INFO=2
                ;;
            \?) echo "error: Invalid option"
                exit;;
        esac
    done
}


run_options "$@"

current_power="$(upower -i "$BAT")"

if [ $INFO -eq 1 ];then
    echo "$current_power"
elif [ $INFO -eq 2 ];then
    notify-send "$(echo "$current_power" | grep --color=never -E 'state|to\ full|to\ empty|percentage')"
else
    echo "$current_power" | grep --color=never -E 'state|to\ full|to\ empty|percentage'
fi
