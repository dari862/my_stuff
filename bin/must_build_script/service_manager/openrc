#!/bin/sh
# need superuser : var (_SUPERUSER)
set -eu

option=${1-}
service=${2-}
user=""
if [ "$(id -u)" -eq 0 ];then
	_SUPERUSER=""
else
	_SUPERUSER="my-superuser"
fi
if [ "${service}" = "user" ];then
	user="--user"
	service=${3-}
	_SUPERUSER=""
fi

_usage() {
    _bn="$(basename "${0}")"
    printf '%s\n' "Usage: ${_bn} <action> [service]" \
                  "" \
                  "Actions:" \
                  "   ${_bn} start [service]    starts service" \
                  "   ${_bn} stop [service]     stops service" \
                  "   ${_bn} restart [service]  restarts service" \
                  "   ${_bn} status [service]   service status" \
                  "   ${_bn} enable [service]   enable service" \
                  "   ${_bn} disable [service]  disable service" \
                  "   ${_bn} list               shows status of all services"
    exit 1
}

if [ "${#}" -ge 2 ];then
    # start
    if [ "${option}" = "start" ];then
        rc-service "${service}" start

    # stop
    elif [ "${option}" = "stop" ];then
        rc-service "${service}" stop

    # restart
    elif [ "${option}" = "restart" ];then
        rc-service "${service}" restart

    # status
    elif [ "${option}" = "status" ];then
        rc-service "${service}" status
 # status
    elif [ "${option}" = "is-enable" ];then
        rc-service "${service}" status
 # status
    elif [ "${option}" = "is-active" ];then
        rc-service "${service}" status

    # enable
    elif [ "${option}" = "enable" ];then
        rc-update add "${service}" default

    # disable
    elif [ "${option}" = "disable" ];then
        rc-update del "${service}" default
    else
        _usage
    fi
elif [ "${#}" -eq 1 ]
then
    # list
    if [ "${option}" = "list" ];then
        rc-update -v show
    elif [ "${option}" = "cleanup" ];then
		:
	elif [ "${option}" = "reload" ];then
		:
    else
        _usage
    fi
else
    _usage
fi
