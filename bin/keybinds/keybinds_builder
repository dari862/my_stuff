#!/bin/sh
# need superuser : used by keybinds

set -e
__distro_path_lib="${1:-}"
current_script_path="${2:-}"

. "$__distro_path_lib"
. "${__distro_path_root}/lib/common/WM"

if [ $(id -u) -eq 0 ];then
	"${current_script_path}"/skel/make "${__distro_path_lib}" "$current_script_path"
 	MainDir="${__distro_path_root}/system_files/skel"
else
	MainDir="$HOME"
fi

. "${current_script_path}/core/file_path_to_edit.conf"
. "${current_script_path}/core/lib"

mkdir -p "$MainDir/.config/keybinds"

if [ $(id -u) -eq 0 ];then
	welcome_shortcut_file_path="${__distro_path_root}/system_files/welcome_keybinds"
	openboxrc_file_path="${__distro_path_root}/system_files/rc.xml"
	mkdir -p "${script_config_path}"
else
	if [ ! -f "$HOME/.config/keybinds/keybinds.conf" ];then
		cp -r "${__distro_path_root}/system_files/skel/.config/keybinds/keybinds.conf" "$HOME/.config/keybinds/keybinds.conf"
	fi
fi

script_config_path="${MainDir}/.config/$scriptconfig_name"
mkdir -p "${script_config_path}"
mkdir -p "${temp_shortcuts_path}"

cp -r "$MainDir/.config/keybinds/keybinds.conf" "${temp_shortcuts_path}"
cp -r "${current_script_path}/core/keybinds_to_sourcemainbindkey.conf" "${temp_shortcuts_path}"

cd "${temp_shortcuts_path}"

build_sourcemainbindkey_conf_file
. "${temp_shortcuts_path}/sourcemainbindkey.conf"

if [ -f "${xbindkeysrc_file_path}" ];then
	build_xbindkeysrc_tmp_file
fi

if [ -f "${alacritty_file_path}" ];then
	build_alacritty_tmp_file
fi

if [ -f "${conky_op_file_path}" ];then
	build_conky_tmp_file
fi

if [ -f "${kittyrc_file_path}" ];then
	build_kitty_tmp_file
fi

if [ -f "${mpv_file_path}" ];then
	build_mpv_tmp_file
fi

if [ -f "${zshrc_file_path}" ];then
	build_zshrc_tmp_file
fi

if [ -f "${bashrc_file_path}" ];then
	build_bashrc_tmp_file
fi

if [ -f "${inputrc_file_path}" ];then
	build_inputrc_tmp_file
fi

if [ -f "${ncmpcpp_file_path}" ];then
	build_ncmpcpp_tmp_file
fi

if [ -f "${openboxrc_file_path}" ];then
	build_openboxrc_tmp_file
fi

if [ -f "${Thunar_file_path}" ];then
	build_Thunar_tmp_file
fi

if command -v rxvt > /dev/null 2>&1;then
	build_x11_tmp_file
fi

if [ -f "${zathura_file_path}" ];then
	build_zathura_tmp_file
fi

if [ -f "${nsxiv_file_path}" ];then
	sed_nsxiv
fi

if [ -f "${clipit_file_path}" ];then
	sed_clipit
fi

if [ -f "${geanyrc_file_path}" ];then
	sed_geanyrc
fi

if [ -f "${lxterminal_file_path}" ];then
	sed_lxterminal
fi

if command -v sxhkd > /dev/null 2>&1;then
	build_sxhkd_bspwm_file
	build_sxhkd_openbox_file
fi

if command -v rofi > /dev/null 2>&1;then
	build_rofi_tmp_file "openbox"
	build_rofi_tmp_file "bspwm"
fi

build_shortcut_read_file

build_welcome_shortcut_file

if [ -f "${openboxrc_file_path}" ];then
	build_pipemenu_file
fi

if [ -f "${viewnior_file_path}" ];then
	build_viewnior_tmp_file
fi

finalize_it
