	append_ncmpcpp_event "${jump_to_browser}" "jump_to_browser"
	append_ncmpcpp_event "${jump_to_playlist_editor}" "jump_to_playlist_editor"
	append_ncmpcpp_event "${jump_to_media_library}" "jump_to_media_library"
