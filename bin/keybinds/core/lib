    cp -r "${geanyrc_file_path}" "${temp_geanyrc_file_path}"
	sed -i "s/popup_gototagdefinition=.*/popup_gototagdefinition=${popup_gototagdefinition}/g" "${temp_geanyrc_file_path}"
	sed -i "s/edit_transposeline=.*/edit_transposeline=${edit_transposeline}/g" "${temp_geanyrc_file_path}"
	sed -i "s/edit_movelineup=.*/edit_movelineup=${edit_movelineup}/g" "${temp_geanyrc_file_path}"
	sed -i "s/edit_movelinedown=.*/edit_movelinedown=${edit_movelinedown}/g" "${temp_geanyrc_file_path}"
	sed -i "s/move_tableft=.*/move_tableft=${move_tableft}/g" "${temp_geanyrc_file_path}"
	sed -i "s/move_tabright=.*/move_tabright=${move_tabright}/g" "${temp_geanyrc_file_path}"
}

sed_lxterminal(){
    cp -r "${lxterminal_file_path}" "${temp_lxterminal_file_path}"
	sed -i "s/new_window_accel=.*/new_window_accel=${new_window_accel}/g" "${temp_lxterminal_file_path}"
	sed -i "s/new_tab_accel=.*/new_tab_accel=${new_tab_accel}/g" "${temp_lxterminal_file_path}"
	sed -i "s/close_tab_accel=.*/close_tab_accel=${close_tab_accel}/g" "${temp_lxterminal_file_path}"
	sed -i "s/close_window_accel=.*/close_window_accel=${close_window_accel}/g" "${temp_lxterminal_file_path}"
	sed -i "s/copy_accel=.*/copy_accel=${copy_accel}/g" "${temp_lxterminal_file_path}"
	sed -i "s/paste_accel=.*/paste_accel=${paste_accel}/g" "${temp_lxterminal_file_path}"
	sed -i "s/name_tab_accel=.*/name_tab_accel=${name_tab_accel}/g" "${temp_lxterminal_file_path}"
	sed -i "s/previous_tab_accel=.*/previous_tab_accel=${previous_tab_accel}/g" "${temp_lxterminal_file_path}"
	sed -i "s/next_tab_accel=.*/next_tab_accel=${next_tab_accel}/g" "${temp_lxterminal_file_path}"
	sed -i "s/move_tab_left_accel=.*/move_tab_left_accel=${move_tab_left_accel}/g" "${temp_lxterminal_file_path}"
	sed -i "s/move_tab_right_accel=.*/move_tab_right_accel=${move_tab_right_accel}/g" "${temp_lxterminal_file_path}"
	sed -i "s/zoom_in_accel=.*/zoom_in_accel=${zoom_in_accel}/g" "${temp_lxterminal_file_path}"
	sed -i "s/zoom_out_accel=.*/zoom_out_accel=${zoom_out_accel}/g" "${temp_lxterminal_file_path}"
	sed -i "s/zoom_reset_accel=.*/zoom_reset_accel=${zoom_reset_accel}/g" "${temp_lxterminal_file_path}"
}

