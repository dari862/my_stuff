	sed -i 's/W-/Super+/g' "${temp_openbox_pipemenu_file_path}"
	sed -i 's/S-/Shift+/g' "${temp_openbox_pipemenu_file_path}"

	. "${temp_openbox_pipemenu_file_path}"
	{
