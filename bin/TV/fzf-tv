#!/bin/sh
set -e

export FZF_DEFAULT_OPTS=""
export FZF_CTRL_R_OPTS=""
tv_config_dir="${2:-}"
main_tv_script_path="${1:-}"
shift 2

list_are="1. Youtube
2. Anime
3. Moive/TV-Show
4. IP-TV"

__mode="$(printf "%s" "$list_are" | fzf --info=hidden --layout=reverse --height=100% --exact --cycle --ansi)"

case "${__mode}" in
	yt|1*)  name="youtube-cli" ;;
	ani|2*) name="anime-cli" ;;
	mov|3*) name="movie" ;;
	tv|4*)  name="iptv" ;;
    *)	    name="youtube-cli" ;;
esac

setsid "${main_tv_script_path}/TV-list"/${name} fzf "$tv_config_dir" $@
