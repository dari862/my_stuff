#!/bin/sh
#===================================================================================
. "$__distro_path_lib"
if command -v lxappearance >/dev/null ;then
	if [ "$HOME" = "/root" ];then
		"${__distro_path_root}"/bin/X11/WM/lxappearance
	else
		"${__distro_path_root}"/bin/X11/WM/lxappearance && ${__distro_path_root}/system_files/bin/reload_gtk23
	fi
fi	
