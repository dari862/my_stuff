#!/bin/sh
. "$__distro_path_lib"
[ "$(cat "${__distro_path_neverremove}/machine_type")" = "vm" ] && exit

picom_path="$HOME/.config/picom.conf"

stop() {	
	kill_process.sh picom
}

start() {
  	if ! pidof -q picom ;then
  		exec picom --daemon --config "$picom_path" &
	fi
}

toggle() {
	if [ $(pidof tint2) ];then
		stop
	else
		start
	fi
}

case "${1}" in
	""|restart)
		stop
		start		
	;;
	start)
		start		
	;;
	stop)	
		stop	
	;;
	toggle)	
		toggle	
	;;
	*)	
		echo "Usage: picom-session [start|stop|restart]"
	;;
esac
