#!/bin/sh
. "$__distro_path_lib"

picom_path="$HOME/.config/picom.conf"

stop() {	
	"${__distro_path_root}"/bin/WM/kill_process.sh picom
}

start() {
  	if ! pidof -q picom ;then
  		setsid picom --daemon --config "$picom_path" &
	fi
}

toggle() {
	if pidof -q tint2;then
		stop
	else
		start
	fi
}

case "${1}" in
	""|restart)
		stop
		start		
	;;
	start)
		start		
	;;
	stop)	
		stop	
	;;
	toggle)	
		toggle	
	;;
	*)	
		echo "Usage: picom-session [start|stop|restart]"
	;;
esac
