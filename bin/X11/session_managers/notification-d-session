#!/bin/sh
. "$__distro_path_lib"

dunstrc_path="$HOME/.config/dunst/dunstrc"

__edit() {
	pidof -q dunst && my-text-editor "$dunstrc_path"
}

stop() {
	"${__distro_path_root}"/bin/WM/kill_process.sh dunst
}

start() {
	pidof -q dunst || setsid dunst -config ${dunstrc_path} 2>/tmp/$USER/dunst_error &
}

case "${1}" in
	""|restart)
		stop
		start		
	;;
	start)
		start		
	;;
	stop)	
		stop	
	;;
	edit)
		__edit
		stop
		start	
	;;
	*)	
		echo "Usage: notification-d-session [start|stop|restart]"
	;;
esac
