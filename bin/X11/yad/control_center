# Picom 
yad --plug=$KEY --tabnum=7 --borders=20 \
--text="$COMP_DESC" --image=compton \
--columns=1 --form \
--field="$COMP_EDIT:FBTN" "my-text-editor $HOME/.config/picom.conf" \
