#!/bin/sh
. "$__distro_path_lib"

__tray_name="tray_GPU_Switcher"
__gui_name="gui_GPU_Switcher"
	
stop() {
	"${__distro_path_root}"/bin/WM/kill_process.sh $__tray_name
}

start() {
	setsid $__tray_name
}

gui() {
	"${__distro_path_root}"/bin/WM/kill_process.sh $__gui_name
	$__gui_name
}

case "$1" in
	""|start)
		start		
	;;
	restart)	
		stop
		start
	;;
	stop)	
		stop	
	;;
	gui)	
		gui	
	;;
	*)	
		echo "Usage: file-manager-session [start|stop|restart]"
	;;
esac
