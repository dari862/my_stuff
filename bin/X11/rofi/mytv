#!/bin/sh
# if this line exist script will be part of hub script.
__mode="${1:-}"
scripts_path="/usr/share/my_stuff/bin/X11/TV"

list_are="1. Youtube
2. Anime
3. Moive/TV-Show
4. IP-TV"

if [ -z "${__mode}" ];then
	if [ -t 1 ];then #on_terminal
        __mode="$(printf "%s" "$list_are" | fzf --info=hidden --layout=reverse --height=100% --exact --cycle --ansi)"
    else
		. "/usr/share/my_stuff/lib/common/WM"
		. "${Distro_config_file}"
		__mode="$(printf "%s" "$list_are" | rofi -theme $HOME/.config/rofi/$ROFI_STYLE/runner.rasi -dmenu -selected-row 0)"
	fi
fi

case "${__mode}" in
	yt|1*) name="youtube-cli" ;;
	ani|2*)name="anime-cli" ;;
	mov|3*)name="movie" ;;
	tv|4*) name="iptv" ;;
    *)	name="youtube-cli" ;;
esac

"$scripts_path"/${name} $@
