#!/bin/sh
# if this line exist script will be part of hub script.
set -e
. "$__distro_path_lib"
. "${__distro_path_root}/lib/common/WM"
. "${Distro_config_file}"

list_are="1. Youtube
2. Anime
3. Moive/TV-Show
4. IP-TV"

selected_mode="$(printf "%s" "$list_are" | rofi -theme $HOME/.config/rofi/$ROFI_STYLE/runner.rasi -dmenu -selected-row 0)"

case "${selected_mode}" in
	1*) name="youtube-cli" ;;
	2*) name="anime-cli" ;;
	3*) name="lobster.sh" ;;
	4*) name="iptv" ;;
	*)  name="youtube-cli" ;;
esac
	
"${__distro_path_root}/bin/X11/TV"/${name}
