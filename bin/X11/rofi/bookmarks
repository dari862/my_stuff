#!/bin/sh
. "$__distro_path_lib"
. "${__distro_path_root}/lib/common/WM"
. "${Distro_config_file}"

# A simple script for browser bookmarks

database="${script_config_path}/bookmarks"
[ ! -f "$database" ] && touch $database

database_contant="$(cat $database)"

mark="$(printf '%s\nAdd to bookmark.' "$database" | rofi -no-config -no-lazy-grab -dmenu -r -i -l 20 -theme "$HOME/.config/rofi/$ROFI_STYLE"/runner.rasi -p 'Bookmarks:')"

if [ -n "$mark" ];then
	if [ "$mark" = "Add to bookmark." ];then
		printf "%s" "$mark" >> "$database"
	else
		my-www-browser $mark
	fi
fi
