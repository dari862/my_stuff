#!/bin/sh
# if this line exist script will be part of hub script.

. "/usr/share/my_stuff/lib/common/Distro_path"
. "${__distro_path_root}/lib/common/WM"
. "${Distro_config_file}"
RASI="$HOME/.config/rofi/$ROFI_STYLE"
layout="$(grep 'USE_ICON' "${RASI}/confirm.rasi" | cut -d'=' -f2 | tr -d '[:blank:],*/')"

if [ "$layout" = 'YES' ];then
	terminal=""
	files=""
	editor=""
	clifm=""
	vim=""
else
	terminal=" Terminal"
	files=" File-Manager"
	editor=" Text-Editor"
	clifm=" LF"
	vim=" CLI Editor"
fi

options="$terminal\n$files\n$editor\n$clifm\n$vim"
chosen="$(printf "$options" | rofi -theme "${RASI}/runner.rasi" -dmenu -selected-row 0)"

case $chosen in
    $terminal) apps_as_root "my-terminal-emulator" ;;
    $files) apps_as_root "my-file-manager" ;;
    $editor) apps_as_root "my-text-editor" ;;
    $clifm) popup_terminal --superuser "$(which lf)" ;;
    $vim) popup_terminal --superuser "$(which $CLI_EDITER)" ;;
esac
