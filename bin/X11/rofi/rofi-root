#!/bin/sh
# if this line exist script will be part of hub script.

. "/usr/share/my_stuff/lib/common/WM"
. "${Distro_config_file}"

# Apps
layout="$(grep 'USE_ICON' ${RASI} | cut -d'=' -f2 | tr -d '[:blank:],*/')"
if [ "$layout" = 'YES' ];then
	terminal=""
	files=""
	editor=""
	clifm=""
	vim=""
else
	terminal=" Terminal"
	files=" File-Manager"
	editor=" Text-Editor"
	clifm=" LF"
	vim=" CLI Editor"
fi
# Variable passed to rofi
options="$terminal\n$files\n$editor\n$clifm\n$vim"

# Functions
chosen="$(printf "$options" | rofi -theme $HOME/.config/rofi/$ROFI_STYLE/runner.rasi -dmenu -selected-row 0)"
case $chosen in
    $terminal)
        command_2_run="my-terminal-emulator"
        _extra_arg=""
        ;;
    $files)
        command_2_run="my-file-manager"
        _extra_arg=""
        ;;
    $editor)
        command_2_run="my-text-editor"
        _extra_arg=""
        ;;
    $clifm)
        command_2_run="popup_terminal" 
         _extra_arg="$(which lf)"
        ;;
    $vim)
        command_2_run="popup_terminal" 
        _extra_arg="$(which $CLI_EDITER)"
        ;;
esac

[ -n "${command_2_run}" ] && apps_as_root "${command_2_run}" "$_extra_arg"
