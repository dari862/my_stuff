## Openbox Pipemenu to change openbox styles

# Variables and functions
. "$__distro_path_lib"
. "${__distro_path_root}/lib/common/pipemenu"

menuStart
	menuItem 'Status Bar (polybar)' "change-fonts --bar"
	menuItem 'Launchers (rofi)' "change-fonts --rofi"
	menuItem 'Terminal (alacritty)' "change-fonts --terminal"
	menuItem 'Desktop (openbox)' "change-fonts --openbox"
	menuItem 'Notifications (dunst)' "change-fonts --dunst"
	menuItem 'Applications (gtk)' "change-fonts --gtk"
	menuSeparator
	menuItem 'Change Globally' "change-fonts --all"
menuEnd

exit 0

