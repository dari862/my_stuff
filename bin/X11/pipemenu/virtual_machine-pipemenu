#!/bin/sh
. "$__distro_path_lib"
. "${__distro_path_root}/lib/common/pipemenu"

# Pipemenu
menuStart
if command -v virtual_machine >/dev/null 2>&1;then
	menuItem 'Run virtual machine' 'virtual_machine'
else
	cd ${__distro_path_root}/Distro_Specific/apps_center/hypervisors
	for hy in *;do
		menuItem "install $hy" "popup_terminal --install $hy"
	done
fi
menuEnd
