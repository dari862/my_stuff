#!/bin/sh
## Openbox Pipemenu to change openbox menu style
# Variables and functions
. "$__distro_path_lib"
. "${__distro_path_root}/lib/common/pipemenu"

menuStart
	menuItem 'Terminal (my-terminal-emulator)' "apps_as_root my-terminal-emulator"
	menuItem 'File Manager (my-file-manager)' "apps_as_root my-file-manager"
	menuItem 'Text Editor (my-text-editor)' "apps_as_root my-text-editor"
	menuItem 'File Manager CLI (lf)' "popup_terminal --superuser \"$(which lf)\""
	menuItem 'Text Editor CLI (my-cli-editor)' "popup_terminal --superuser \"$(which $CLI_EDITER) $HOME\""
	menuItem 'Appearance Settings' "apps_as_root appearance_settings_"
	[ "$(command -v qt5ct)" ] && menuItem 'QT5 Settings' "apps_as_root qt5ct"
	[ "$(command -v kvantummanager)" ] && menuItem 'kvantum Manager' "apps_as_root kvantummanager"
menuEnd
