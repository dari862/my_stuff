#!/bin/sh
. "/usr/share/my_stuff/lib/common/Distro_path"
disto_brightness_controller_path="${__distro_path_root}/system_files/bin/disto_brightness_controller"

if [ -f "${__distro_path_root}/system_files/this_is_laptop" ];then
	if command -v xbacklight >/dev/null 2>&1;then
		pak=xbacklight.sh
	elif command -v light >/dev/null 2>&1;then
		pak=light.sh
	else
		echo "$0: light or xbacklight not installed."
		exit 1
	fi
	
	cat "head.sh" "$pak" "tail.sh" | tee "$disto_brightness_controller_path" >/dev/null 2>&1
	chmod +x "$disto_brightness_controller_path"
fi
