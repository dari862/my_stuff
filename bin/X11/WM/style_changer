#!/bin/sh
. "$__distro_path_lib"

_panel_name_="${1:-}"
style="${2:-}"
no_wallpaper_option="${3:-}"

style_setter "${_panel_name_}" "${style}" "${no_wallpaper_option}"
setbg -r
panel_launcher --reload

if [ "${style}" != "owl4ce_dark" ] || [ "${style}" != "owl4ce_light" ];then
	dunstify -u normal --replace=699 -i ${__distro_path_root}/icons/channelmixer.svg "Applying Style : ${style}"
fi
