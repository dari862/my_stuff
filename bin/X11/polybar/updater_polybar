#!/bin/sh
. "$__distro_path_lib"
__arg="${1-}"

interactive_upgrade(){
	popup_terminal --commands "${__distro_path_root}/bin/WM/update-notification -i"
}

list_update(){
	popup_terminal --commands "${__distro_path_root}/bin/WM/update-notification -l"
}

print_total_updates(){
	. "${__distro_path_root}/lib/common/WM"
	. "${Distro_config_file}"
	. "${__distro_path_root}/lib/apps/update-notification.conf"
	
	UPDATES=$(cat "$updates_file" | wc -l)
	
	"${__distro_path_root}"/bin/WM/update-notification -n

	if grep -q "#EXO#" "$HOME/.config/polybar/${polybar_STYLE}/config.ini";then
		_output="$UPDATES"
	elif [ "$UPDATES" -eq 0 ];then
		_output="0"
	elif [ "$UPDATES" -eq 1 ];then
		_output="$UPDATES Update"
	elif [ "$UPDATES" -gt 1 ];then
		_output="$UPDATES Updates"
	fi
	
	echo "$_output"
}

case $__arg in
	"") print_total_updates;;
	--upgrade) interactive_upgrade ;;
	--list-update) list_update;;
	*) print_total_updates;;
esac
