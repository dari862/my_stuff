#!/bin/sh
## Files and Directories
. "$__distro_path_lib"
. "${__distro_path_root}/lib/common/WM"
. "${Distro_config_file}"

if [ "$@" ];then
	sed -i "s/polybar_STYLE=.*/polybar_STYLE=\"$@\"/g" "${Distro_config_file}"
	sed -i "s/ROFI_STYLE=.*/ROFI_STYLE=\"$@\"/g" "${Distro_config_file}"
fi

polybar-session restart
