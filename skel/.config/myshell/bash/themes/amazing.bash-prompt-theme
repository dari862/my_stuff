#!/bin/bash

if [ "$vim_mode_enabled" = true ];then
	PS1='\[\033[;32m\]┌──(\[\033[1;34m\]\u@\h\[\033[;32m\])-[\[\033[0;1m\]\w\[\033[;32m\]]\n\[\033[1;34m\]\$\[\033[0m\]'
	set -o vi
	# Use `bind` to detect mode changes
	bind 'set show-mode-in-prompt on'
	bind 'set vi-ins-mode-string └─❯ '
	bind 'set vi-cmd-mode-string └─❮ '
else
	PS1='\[\033[;32m\]┌──(\[\033[1;34m\]\u@\h\[\033[;32m\])-[\[\033[0;1m\]\w\[\033[;32m\]]\n\[\033[;32m\]└─\[\033[1;34m\]\$\[\033[0m\] '
fi
