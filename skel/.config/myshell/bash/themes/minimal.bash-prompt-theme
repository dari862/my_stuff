#!/bin/bash

if [ "$vim_mode_enabled" = true ];then
	set -o vi
	# Use `bind` to detect mode changes
	bind 'set show-mode-in-prompt on'
	bind 'set vi-ins-mode-string \1\e[0;32m>\e[0m '
	bind 'set vi-cmd-mode-string \1\e[0;31m<\e[0m '
fi

# Technicolor dreams
force_color_prompt=yes
color_prompt=yes

# Simple prompt with path in the window/pane title and carat for typing line
PS1=$'\uf0a9 '
PS1="\[\e]0;\w\a\]$PS1"
