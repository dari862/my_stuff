configuration {
    show-icons:                     false;
    display-drun: 					":";
    drun-display-format:            "{name}";
    disable-history:                false;
	sidebar-mode: 					false;
    location:                       3;
}

@import "theme.rasi"

window {
    transparency:                   "real";
    background-color:               @al;
    text-color:                     @fg;
    border-radius:                  0px;
    width:                          300;
    x-offset:                       -15;
    y-offset:                       49;
}

prompt {
    enabled: 						true;
	padding: 						4px 4px 6px 6px;
	background-color: 				@al;
	text-color: 					@fg;
}

textbox-prompt-colon {
	expand: 						false;
	str: 							"î¦¨";
    background-color:               @al;
    text-color:                     @bd;
    padding:                        5px 0px 0px 8px;
	font:							"feather 12";
}

inputbar {
	children: 						[ textbox-prompt-colon, prompt ];
    background-color:               @al;
    text-color:                     @fg;
    expand:                         false;
    border:                  		0px 0px 1px 0px;
    border-radius:                  0px;
    border-color:                  	@bg;
    margin:                         0px 0px 0px 0px;
    padding:                        5px 0px 3px 0px;
    position:                       center;
}


entry {
    background-color:               @al;
    text-color:                     @fg;
    placeholder-color:              @fg;
    expand:                         true;
    horizontal-align:               0;
    placeholder:                    "Search";
    blink:                          true;
    padding:                        4px 0px 0px 0px;
}

case-indicator {
    background-color:               @al;
    text-color:                     @fg;
    spacing:                        0;
}


listview {
    background-color:               @al;
    columns:                        1;
    lines:							6;
    spacing:                        4px;
    cycle:                          true;
    dynamic:                        true;
    layout:                         vertical;
}

mainbox {
    background-color:               @al;
    children:                       [ inputbar, listview ];
    spacing:                       	6px;
    padding:                        6px 6px 6px 6px;
}

element {
    background-color:               @al;
    text-color:                     @fg;
    orientation:                    horizontal;
    border-radius:                  0px;
    padding:                        6px 6px 6px 6px;
}

element-icon {
    background-color: 				inherit;
    text-color:       				inherit;
    size:                           0px;
    border:                         0px;
}

element-text {
    background-color: 				inherit;
    text-color:       				inherit;
    expand:                         true;
    horizontal-align:               0;
    vertical-align:                 0;
    margin:                         2px 0px 2px 4px;
}

element selected {
    background-color:               @bg;
    text-color:                     @al;
    border:                  		0px;
    border-radius:                  0px;
    border-color:                  	@bg;
}

element.active,
element.selected.urgent {
  background-color: @bg;
  text-color: @al;
  border-color: @bg;
}

element.selected.urgent {
  border-color: @bg;
}

element.urgent,
element.selected.active {
  background-color: @bd;
  text-color: @al;
  border-color: @bd;
}

element.selected.active {
  border-color: @bg;
}
