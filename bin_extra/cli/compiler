#!/bin/sh
# need superuser : use my-superuser

# This script will compile or run another finishing operation on a document. I
# have this script run via vim.

# Compiles .tex. groff (.mom, .ms), .rmd, .md, .org.  Opens .sent files as sent
# presentations. Runs scripts based on extension or shebang.
show_help() {
    cat << EOF
Usage: compiler [FILE]
A universal wrapper for compiling and running code/documents.

Examples & Supported Types:
  .tex             Run latexmk
  .md              Markdown via lowdown, groffdown, or pandoc
  .[0-9]           Man-page source to PDF
  .mom|.ms         Groff documents with refer/preconv
  .c|.cpp|.go|.cs  Compiled languages (runs output immediately)
  .py|.rs|.m       Scripts and projects (python, cargo, octave)
  .scad|.sass      OpenSCAD to STL, SASS to CSS
  .sent            Run sent presentation (detached)
EOF
}

if [ -z "$1" ] || [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    show_help
    exit 0
fi

file="${1}"
ext="${file##*.}"
dir=${file%/*}
base="${file%.*}"

cd "${dir}" || exit "1"

case "${ext}" in
    [0-9]) preconv "${file}" | refer -PS -e | groff -mandoc -T pdf > "${base}.pdf" ;;
    mom|ms) preconv "${file}" | refer -PS -e | groff -T pdf -m"${ext}" > "${base}.pdf" ;;
    c) cc "${file}" -o "${base}" && "./${base}" ;;
    cob) cobc -x -o "$base" "$file" && "$base" ;;
    cpp) g++ "${file}" -o "${base}" && "./${base}" ;;
    cs) mcs "${file}" && mono "${base}.exe" ;;
    go) go run "${file}" ;;
    h) my-superuser make install ;;
    java) javac -d classes "${file}" && java -cp classes "${base}" ;;
    m) octave "${file}" ;;
    md) [ -x "$(command -v lowdown)" ] && \
	    lowdown --parse-no-intraemph "${file}" -Tms | groff -mpdfmark -ms -kept -T pdf > "${base}.pdf" || \
	    [ -x "$(command -v groffdown)" ] && \
	    groffdown -i "${file}" | groff -T pdf > "${base}.pdf" || \
	    pandoc -t ms --highlight-style="kate" -s -o "${base}.pdf" "${file}" ;;
    org) emacs "${file}" --batch -u "${USER}" -f org-latex-export-to-pdf ;;
    py) python "${file}" ;;
    rink) rink -f "${file}" ;;
    [rR]md) Rscript -e "rmarkdown::render('${file}', quiet=TRUE)" ;;
    rs) cargo build ;;
    sass) sassc -a "${file}" "${base}.css" ;;
    scad) openscad -o "${base}.stl" "${file}" ;;
    sent) setsid -f sent "${file}" 2> "/dev/null" ;;
    tex) latexmk ;;
    *) sed -n '/^#!/s/^#!//p; q' "${file}" | xargs -r -I % "${file}" ;;
esac
