#!/bin/sh

tweek_as_dependency "Adding_contrib" || continue
tweek_as_dependency "Adding_nonfree_repo" || continue
tweek_as_dependency "Adding_nonfree_firmware_repo" || continue

app_name="GPU Drivers"

Packages_2_install=""
add_nvidia=false
add_amd=false
add_intel=false

if [ "$(lspci | grep "VGA compatible controller" | grep VMware -c)" != "0" ];then
	say "This is VM"
fi

if [ "$(lspci | grep -i nvidia | grep VGA -c)" != "0" ];then
	add_nvidia=true
fi

if [ "$(lspci | grep -i amd | grep VGA -c)" != "0" ];then
	add_amd=true
fi

if [ "$(lspci | grep -i intel | grep VGA -c)" != "0" ];then
	add_intel=true
fi

create_X11_intel_conf(){
	my-superuser mkdir -p /etc/X11/xorg.conf.d/
	my-superuser tee /etc/X11/xorg.conf.d/20-intel.conf <<- EOF > /dev/null
	Section "Device"
	Identifier  "Intel Graphics"
	Driver      "Intel"
	Option      "AccelMethod"  "sna"
	Option      "TearFree""True"
	Option      "Tiling""True"
	Option      "SwapbuffersWait" "True"
	#Option      "AccelMethod"  "uxa"
	EndSection
	EOF
}

install_intel_drivers(){
	Packages_2_install="xserver-xorg-video-intel intel-gpu-tools intel-media-va-driver" || continue
}

install_amd_drivers(){
	Packages_2_install="libgl1-mesa-dri xserver-xorg-video-ati xserver-xorg-video-amdgpu mesa-vulkan-drivers vkbasalt" || continue
}

install_nvidia_drivers(){
	_cuda_=""
	_kernel_open_dkms_=""
	prompt '  do you want to add Cuda Support?' && _cuda_="cuda"
	prompt 'do you want to install opensource nvidia-kernel?' && _kernel_open_dkms_="nvidia-kernel-open-dkms"

	Packages_2_install="nvidia-driver $_kernel_open_dkms_ $_cuda_ linux-headers-$(uname -r) dkms firmware-misc-nonfree" || continue

	say
	say "if system notification regarding Nvidia driver conflicts appeard reboot will fix it."
	say
	say "NVIDIA Drivers installed you need to reboot your pc."
}

if [ "$add_nvidia" = true ];then
	install_nvidia_drivers
fi
	
if [ "$add_amd" = true ];then
	install_amd_drivers
fi
	
if [ "$add_intel" = true ];then
	install_intel_drivers
fi

Package_installer_ "$Packages_2_install"

if [ "$add_nvidia" = true ];then
	if ! ls /dev/nvidia* >/dev/null 2>&1;then
		my-superuser nvidia-smi >/dev/null 2>&1
	fi
fi

if [ "$add_intel" = true ];then
	#create_X11_intel_conf
	:
fi

say "Creating Check File (GPU_Drivers_ready)"
my-superuser touch /usr/share/my_stuff/system_files/GPU_Drivers_ready
my-superuser  /usr/share/my_stuff/bin/X11/pipemenu/create_pipemenu/gaming-pipemenu.sh || failed_to_run "failed to run create_pipemenu/gaming-pipemenu.sh"

say "enable Hardware Acceleration."
my-installer --tweek "HardwareAcceleration" || continue
