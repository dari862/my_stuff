#!/bin/sh
# need superuser : called by my-superuser
# if this line exist script will be part of hub script.

echo "cleaning zypper"
my-superuser zypper clean all
my-superuser zypper autoremove -y
if command -v podman >/dev/null 2>&1;then
	echo "Clean up old up unused podman images, volumes, flatpak packages"
    podman image prune -af
    podman volume prune -f
fi
if command -v flatpak >/dev/null 2>&1;then
	echo "Clean up old unused flatpak packages"
    flatpak uninstall --unused
fi
echo "zypper cleaned."
