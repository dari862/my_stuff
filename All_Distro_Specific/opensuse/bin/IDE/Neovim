#!/bin/sh
printf '\n\n  1. Install Lazyvim? \n  2. Install kickstart?\n  3. Install ThePrimeagen config?\n  4. Install kickstart (ChrisTitusTech)?\n\nInsert appropriate number: '
stty -icanon -echo time 0 min 1
__choice="$(head -c1)"
stty icanon echo

Title="Neovim"

app_name="nvim"

extra_apps_="ripgrep fzf python3-virtualenv luarocks golang ShellCheck git"

# Determine if Wayland or Xorg is being used
if [ "$XDG_SESSION_TYPE" = "wayland" ];then
	extra_apps_="$extra_apps_ wl-clipboard"
else
	extra_apps_="$extra_apps_ xclip"
fi

say "Installing ${Title} updater and installer..." 1
Package_installer_ "neovim" || continue

say 'Installing extra packages...' 1
Package_installer_ ${extra_apps_} || continue

. "/usr/share/my_stuff/bin/my_installer/apps_center/IDE/Neovim_Extra/post_install.sh"
