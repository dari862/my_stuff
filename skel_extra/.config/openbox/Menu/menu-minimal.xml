<!DOCTYPE menu [
  <!ENTITY openboxconfig "~/.config/openbox">
]>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/  file:///usr/share/openbox/menu.xsd">
  <menu id="root-menu" title="Menu" label="Openbox 3">
<!--	<separator label="Main Menu"/>  -->
		<item label="Terminal Emulator">
			<action name="Execute">
				<command>my-terminal-emulator</command>
			</action>
		</item>
		<item label="File Manager">
			<action name="Execute">
				<command>my-file-manager</command>
			</action>
		</item>
		<item label="Web Browser">
			<action name="Execute">
				<command>my-www-browser</command>
			</action>
		</item>
		<item label="Text Editor">
			<action name="Execute">
				<command>my-text-editor</command>
			</action>
		</item>
		<separator/>
		<menu id="virtual_machine" execute="virtual_machine-pipemenu" label="Virtual Machine"/>
	    <separator/>
		<menu id="app-menu" execute="obamenu.py" label="Applications"/>
		<menu id="preferences" execute="sh -c 'cat (((distro_path_root)))/system_files/pipemenu/ac'" label="Preferences"/>
		<separator/>
		<menu id="Exit" label="System">
				<item label="Lock">
					<action name="Execute">
						<command>my_session_manager_menu lock</command>
					</action>
				</item>
				<item label="Logout">
					<action name="Execute">
						<command>my_session_manager_menu logout</command>
					</action>
				</item>
				<item label="Suspend">
					<action name="Execute">
						<command>my_session_manager_menu suspend</command>
					</action>
				</item>
				<item label="Reboot">
					<action name="Execute">
						<command>my_session_manager_menu reboot</command>
					</action>
				</item>
				<item label="Shutdown">
					<action name="Execute">
						<command>my_session_manager_menu shutdown</command>
					</action>
				</item>
		</menu>
	</menu>
</openbox_menu>
