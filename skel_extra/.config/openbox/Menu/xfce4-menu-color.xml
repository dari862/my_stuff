<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE menu [
  <!ENTITY icons "(((__distro_path_all_distro_themes)))/icons">
  <!ENTITY openboxconfig "~/.config/openbox">
]>
<openbox_menu xmlns="http://openbox.org/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://openbox.org/
                file:///usr/share/openbox/menu.xsd">


    <menu id="root-menu" label="Openbox 3">
		<item label="Run Program" icon="&icons;/search.png">
			<action name="Execute">
				<command>rofi-launcher</command>
			</action>
		</item> 

		<separator/>
	    <menu id="virtual_machine" execute="virtual_machine-pipemenu" label="Virtual Machine" icon="&icons;/desktop.png"/>
		<item label="Terminal" icon="&icons;/terminal.png">
            <action name="Execute">
                <command>
                    my-terminal-emulator
                </command>
            </action>
        </item>
        <item label="Web Browser" icon="&icons;/browser.png">
            <action name="Execute">
                <command>
                    my-www-browser
                </command>
            </action>
        </item>
        <item label="File Manager" icon="&icons;/filemanager.png">
            <action name="Execute">
                <command>
                    my-file-manager
                </command>
            </action>
        </item>
        <item label="Text Editor" icon="&icons;/editor.png">
            <action name="Execute">
                <command>
                    my-text-editor
                </command>
            </action>
        </item>

        <menu id="desktop-app-menu" label="Applications" icon="&icons;/apps.png" execute="my_obmag.py" />
		
        <separator/>

		<menu id="preferences" execute="sh -c 'cat (((my_preferences_pipemenu_file)))'" label="Preferences" icon="&icons;/settings.png"/>
	
		<menu id="info" execute="sysinfo-pipemenu --more" label="System info" icon="&icons;/stats.png"/>
		
        <menu id="HelpAndResources" execute="help-menu-openbox" label="Help &amp; Resources" icon="&icons;/help.png"/>
		<menu id="KeybindsPipeMenu" execute="keyboard-shortcut-pipemenu" label="Keybinds" icon="&icons;/keyboard.png"/>
		
        <separator/>

        <item label="Exit" icon="&icons;/sys-poweroff.png">
            <action name="Execute">
                <command>my_session_manager_menu</command>
            </action>
        </item>
    </menu>
</openbox_menu>
