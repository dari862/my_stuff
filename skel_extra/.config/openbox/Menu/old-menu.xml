<!DOCTYPE menu [
  <!ENTITY icons "(((__distro_path_themes)))/icons/openbox-menu">
  <!ENTITY openboxconfig "~/.config/openbox">
]>
<openbox_menu xmlns="http://openbox.org/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://openbox.org/
                file:///usr/share/openbox/menu.xsd">


    <menu id="root-menu" label="Openbox 3">
		<item label="Run Program" icon="&icons;/search.png">
			<action name="Execute">
				<command>rofi-launcher</command>
			</action>
		</item> 

		<separator/>
		<menu id="virtual_machine" execute="virtual_machine-pipemenu" label="Virtual Machine" icon="&icons;/virtualbox.png"/>
		
		<item label="Terminal" icon="&icons;/terminal.png">
            <action name="Execute">
                <command>
                    my-terminal-emulator
                </command>
            </action>
        </item>
        <item label="Web Browser" icon="&icons;/web-browser.png">
            <action name="Execute">
                <command>
                    my-www-browser
                </command>
            </action>
        </item>
        <item label="File Manager" icon="&icons;/file-manager.png">
            <action name="Execute">
                <command>
                    my-file-manager
                </command>
            </action>
        </item>
        <item label="Text Editor" icon="&icons;/text-editor.png">
            <action name="Execute">
                <command>
                    my-text-editor
                </command>
            </action>
        </item>

        <menu id="desktop-app-menu" label="Applications" icon="&icons;/applications.png" execute="obamenu.py" />
		
        <separator/>

		<menu id="preferences" execute="sh -c 'cat (((distro_path_root)))/system_files/pipemenu/my'" label="Preferences" icon="&icons;/settings.png"/>
 
		<menu id="info" execute="sysinfo-pipemenu --more" label="System info" icon="&icons;/stats.png"/>

		<menu id="HelpAndResources" execute="help-menu-openbox" label="Help &amp; Resources" icon="&icons;/help2.png"/>
		<menu id="KeybindsPipeMenu" execute="keyboard-shortcut-pipemenu" label="Keybinds" icon="&icons;/shortcut.png"/>

        <separator/>

		<menu icon="&icons;/exit3.png" id="Exit" label="Exit">
				<item icon="&icons;/lock.png" label="Lock Screen">
					<action name="Execute">
						<command>my_session_manager_menu lock</command>
					</action>
				</item>
				<item icon="&icons;/exit2.png" label="Logout">
					<action name="Execute">
						<command>my_session_manager_menu logout</command>
					</action>
				</item>
				<separator/>
				<item icon="&icons;/exit.png" label="Suspend">
					<action name="Execute">
						<command>my_session_manager_menu suspend</command>
					</action>
				</item>
				<separator/>
				<item icon="&icons;/restart.png" label="Reboot">
					<action name="Execute">
						<command>my_session_manager_menu reboot</command>
					</action>
				</item>
				<separator/>
				<item icon="&icons;/exit3.png" label="Shutdown">
					<action name="Execute">
						<command>my_session_manager_menu shutdown</command>
					</action>
				</item>
		</menu>
    </menu>
</openbox_menu>
