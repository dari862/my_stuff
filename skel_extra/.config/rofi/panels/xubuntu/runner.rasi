configuration {
    show-icons:                     true;
    display-run: 					"Run :";
    drun-display-format:            "{icon} {name}";
    disable-history:                false;
	sidebar-mode: 					false;
    location:                       7;
}

@import "theme.rasi"

window {
    transparency:                   "real";
    background-color:               @al;
    text-color:                     @bga;
    border-radius:                  0px;
    width:                          250px;
    x-offset:                       25px;
    y-offset:                       -55px;
}

prompt {
    enabled: 						true;
	padding: 						4px 4px 6px 6px;
	background-color: 				@al;
	text-color: 					@bga;
}

textbox-prompt-colon {
	expand: 						false;
	str: 							"ï²µ";
    background-color:               @al;
    text-color:                     @bg;
    padding:                        6px 0px 0px 8px;
	font:							"feather 9";
}

inputbar {
	children: 						[ textbox-prompt-colon, prompt, entry ];
    background-color:               @al;
    text-color:                     @bga;
    expand:                         false;
    border:                  		0px 0px 1px 0px;
    border-radius:                  0px;
    border-color:                  	@fg;
    margin:                         0px 0px 0px 0px;
    padding:                        0px 0px 0px 0px;
    position:                       center;
}


entry {
    background-color:               @al;
    text-color:                     @bga;
    placeholder-color:              @bga;
    expand:                         true;
    horizontal-align:               0;
    placeholder:                    "";
    blink:                          true;
    padding:                        4px 0px 0px 0px;
}

case-indicator {
    background-color:               @al;
    text-color:                     @bga;
    spacing:                        0;
}


listview {
    background-color:               @al;
    columns:                        1;
    lines:							10;
    spacing:                        4px;
    cycle:                          false;
    dynamic:                        true;
    layout:                         vertical;
}

mainbox {
    background-color:               @al;
    children:                       [ inputbar, listview ];
    spacing:                       	5px;
    padding:                        5px 5px 5px 5px;
}

element {
    background-color:               @al;
    text-color:                     @bga;
    orientation:                    horizontal;
    border-radius:                  4px;
    padding:                        4px 4px 4px 4px;
}

element-icon {
    background-color: 				inherit;
    text-color:       				inherit;
    size:                           0px;
    border:                         0px;
}

element-text {
    background-color: 				inherit;
    text-color:       				inherit;
    expand:                         true;
    horizontal-align:               0;
    vertical-align:                 0;
    margin:                         2px 0px 2px 0px;
}

element normal.urgent,
element alternate.urgent {
    background-color:               @bga;
    text-color:                     @bga;
    border-radius:                  9px;
}

element normal.active,
element alternate.active {
    background-color:               @al;
    text-color:                     @bga;
}

element selected {
    background-color:               @al;
    text-color:                     @ac;
    border:                  		0px;
    border-radius:                  0px;
    border-color:                  	@fg;
}

element selected.urgent {
    background-color:               @bga;
    text-color:                     @bga;
}

element selected.active {
    background-color:               @al;
    color:                          @bga;
}
